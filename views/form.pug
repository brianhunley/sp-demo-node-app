extends layout

block content
  //- check if data exists and if so, use the data object otherwise a blank object
  -data = data || {}

  if errors
    ul
      for error in errors
        li= error.msg

  form(action='.' method='POST')
    label(for='name') Name:
    input(
      type='text'
      id='name'
      name='name'
    )

    label(for='email') Email:
    input(
      type='email'
      id='email'
      name='email'
    )

    input(type='submit' value='Submit')